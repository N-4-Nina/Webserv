[32m+[m	[32m// 	close(fd_in[0]);[m
[32m+[m	[32m// 	close(fd_in[1]);[m
[32m+[m
[32m+[m	[32m// 	if (execve(_binary.c_str(), args, env) < 0)[m
[32m+[m	[32m// 		exit(-1);				// bail d\erreur √† renvoyer[m[41m [m
[32m+[m[32m    // }[m
[32m+[m	[32m// else[m
[32m+[m	[32m// {[m
[32m+[m	[32m// 	close(fd_out[1]);[m
[32m+[m
